<?xml version="2.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtexpnum3"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/mm2"
        android:inputType="none|numberSigned|numberDecimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHint="?android:attr/textColorHint"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/btnCalcula"
        app:layout_constraintTop_toBottomOf="@+id/txtexpnum2" />

    <EditText
        android:id="@+id/txtexpnum2"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/mm2"
        android:inputType="none|numberSigned|numberDecimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHint="?android:attr/textColorHint"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/resultadoPerimetro"
        app:layout_constraintTop_toBottomOf="@+id/txtexpnum" />

    <TextView
        android:id="@+id/vidro_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-black"
        android:text="vidro 3"
        android:textColor="#0E6BFF"
        android:textColorLink="#0E6BFF"
        android:textScaleX="1"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toStartOf="@+id/txtexpnum3"
        app:layout_constraintTop_toBottomOf="@+id/vidro_5"
        tools:text="vidro 3" />

    <TextView
        android:id="@+id/vidro_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-black"
        android:text="vidro 2"
        android:textColor="#0E6BFF"
        android:textColorLink="#0E6BFF"
        android:textScaleX="1"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toStartOf="@+id/txtexpnum2"
        app:layout_constraintTop_toBottomOf="@+id/vidro4"
        tools:text="vidro 2" />

    <TextView
        android:id="@+id/txtexpess10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-black"
        android:text="E"
        android:textColor="#0E6BFF"
        android:textColorLink="#0E6BFF"
        android:textScaleX="1"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toStartOf="@+id/vidro_6"
        app:layout_constraintTop_toBottomOf="@+id/txtexpess9"
        tools:text="E" />

    <TextView
        android:id="@+id/txtexpess9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-black"
        android:text="E"
        android:textColor="#0E6BFF"
        android:textColorLink="#0E6BFF"
